<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.settings.SettingsFragment">


    <RelativeLayout
        android:id="@+id/relative_layout_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Обновить"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/jay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update"
            android:layout_marginLeft="20dp"
            android:text="Обновление справочников из 1C" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/jay"
            android:layout_marginTop="20dp"
            android:background="@color/colorGrey" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_change_filial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Изменить филиал"
            android:textColor="#000000"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/change"
            android:layout_marginTop="20dp"
            android:background="@color/colorGrey" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout_connens_to1C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Подключение к веб-сервису 1С"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/connect"
            android:layout_marginTop="20dp"
            android:background="@color/colorGrey" />

    </RelativeLayout>


</LinearLayout>